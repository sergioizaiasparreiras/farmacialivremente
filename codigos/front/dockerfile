# Estágio 1: Build do React App
FROM node:22-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Estágio 2: Servidor de Produção com Nginx
FROM nginx:1.27-alpine

# --- CORREÇÃO AQUI ---
# Copia o conteúdo da pasta 'dist' (provável nome da pasta de build do seu projeto)
# para a pasta que o Nginx usa para servir os arquivos.
COPY --from=build /app/dist /usr/share/nginx/html

# Copia a configuração do Nginx que faz o proxy reverso para o backend
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
